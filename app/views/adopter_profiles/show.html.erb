<% if current_user.adopter_account.adopter_applications.exists? %>
  <%= render 'applications' %>
<% end %>

<div class="container">
  <div class="row justify-content-center">
      <div class="col-12 col-lg-10 col-xl-8 mx-auto">
          <h2 class="h3 mt-3 page-title"><%= current_user.first_name %>'s Profile</h2>
          <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-outline-dark' %>
          <div class="my-4">
              <div class="list-group mb-5 shadow">
                  <div class="list-group-item col">
                      <div class="row align-items-center">
                        <h5 class="mb-0 bold">Administrative Details</h5>
                        <div class="mt-2">
                            <strong>Phone Number</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.formatted_phone %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Contact Method</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.contact_method %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Country</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.country %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Province/State</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.province_state %></p>
                        </div>
                        <div class="mt-2">
                            <strong>City/Town</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.city_town %></p>
                        </div>
                      </div>
                  </div>

                  <div class="list-group-item col">
                      <div class="row align-items-center">
                        <h5 class="mb-0">Your Lifestyle</h5>
                        <div class="mt-2">
                            <strong>You ideal dog</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.ideal_dog %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Your lifestyle</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.lifestyle_fit %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Activities you will do with your dog</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.activities %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Hours dog will be alone on weekends</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.alone_weekend %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Hours dog will be alone on week days</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.alone_weekday %></p>
                        </div>
                      </div>
                  </div>

                  <div class="list-group-item col">
                      <div class="row align-items-center">
                        <h5 class="mb-0">Dog Care</h5>
                        <div class="mt-2">
                            <strong>Your dog care experience</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.experience %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Dog care plans during emergency or vacation</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.contingency_plan %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Will dog care be shared with someone outside household?</strong>
                            <% if current_user.adopter_account.adopter_profile.shared_ownership == true %>
                              <p class="text-muted mb-0">Yes</p>
                            <% else %>
                              <p class="text-muted mb-0">No</p>
                            <% end %>
                        </div>

                        <% unless current_user.adopter_account.adopter_profile.shared_ownership == false %>
                          <div class="mt-2">
                              <strong>Details on shared dog care</strong>
                              <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.shared_owner %></p>
                          </div>
                        <% end %>
                      </div>
                  </div>

                  <div class="list-group-item col">
                      <div class="row align-items-center">
                        <h5 class="mb-0">Household Information</h5>
                        <div class="mt-2">
                            <strong>Housing type</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.housing_type %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Do you have access to a fenced garden?</strong>
                            <% if current_user.adopter_account.adopter_profile.fenced_access == true %>
                              <p class="text-muted mb-0">Yes</p>
                            <% else %>
                              <p class="text-muted mb-0">No</p>
                            <% end %>
                        </div>
                        <% unless current_user.adopter_account.adopter_profile.fenced_access == true %>
                          <div class="mt-2">
                              <strong>Your plan to care for the dog without a fenced garden</strong>
                              <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.fenced_alternative %></p>
                          </div>
                        <% end %>
                        <div class="mt-2">
                            <strong>Dog's location during the day</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.location_day %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Dog's location at night</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.location_night %></p>
                        </div>

                        <div class="mt-2">
                            <strong>Do you rent your home or live on a strata property?</strong>
                            <% if current_user.adopter_account.adopter_profile.do_you_rent == true %>
                              <p class="text-muted mb-0">Yes</p>
                            <% else %>
                              <p class="text-muted mb-0">No</p>
                            <% end %>
                        </div>
                        <% unless current_user.adopter_account.adopter_profile.do_you_rent == false %>
                          <div class="mt-2">
                              <strong>Have you confirmed dogs are allowed on the property?</strong>
                              <% if current_user.adopter_account.adopter_profile.dogs_allowed == true %>
                              <p class="text-muted mb-0">Yes</p>
                            <% else %>
                              <p class="text-muted mb-0">No</p>
                            <% end %>
                          </div>
                        <% end %>
                        <div class="mt-2">
                            <strong>Number of adults in home (over 18)</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.adults_in_home %></p>
                        </div>
                        <div class="mt-2">
                            <strong>Number of children in home (under 18)</strong>
                            <% if current_user.adopter_account.adopter_profile.kids_in_home == 0 %>
                              <p class="text-muted mb-0">None</p>
                            <% else %>
                              <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.kids_in_home %></p>
                            <% end %>
                        </div>
                        <div class="mt-2">
                            <strong>Do you have pets in your home?</strong>
                            <% if current_user.adopter_account.adopter_profile.other_pets == true %>
                              <p class="text-muted mb-0">Yes</p>
                            <% else %>
                              <p class="text-muted mb-0">No</p>
                            <% end %>
                        </div>
                        <% unless current_user.adopter_account.adopter_profile.other_pets == false %>
                          <div class="mt-2">
                              <strong>Description of pets</strong>
                              <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.describe_pets %></p>
                          </div>
                        <% end %>
                      </div>
                  </div>

                  <div class="list-group-item col">
                      <div class="row align-items-center">
                        <h5 class="mb-0">Additional Information</h5>
                        <div class="mt-2">
                            <strong>Have you checked your local shelter for adoptable dogs?</strong>
                            <% if current_user.adopter_account.adopter_profile.checked_shelter == true %>
                              <p class="text-muted mb-0">Yes</p>
                            <% else %>
                              <p class="text-muted mb-0">No</p>
                            <% end %>
                        </div>
                        <div class="mt-2">
                            <strong>Have you ever had to surrender a pet?</strong>
                            <% if current_user.adopter_account.adopter_profile.surrendered_pet == true %>
                              <p class="text-muted mb-0">Yes</p>
                            <% else %>
                              <p class="text-muted mb-0">No</p>
                            <% end %>
                        </div>
                        <% unless current_user.adopter_account.adopter_profile.surrendered_pet == false %>
                          <div class="mt-2">
                              <strong>Details on surrendering the pet</strong>
                              <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.describe_surrender %></p>
                          </div>
                        <% end %>
                        <div class="mt-2">
                            <strong>Your annual cost estimate for dog care</strong>
                            <p class="text-muted mb-0"><%= current_user.adopter_account.adopter_profile.annual_cost %></p>
                        </div>
                      </div>
                  </div>


              </div>
          </div>
      </div>
  </div>
</div>



