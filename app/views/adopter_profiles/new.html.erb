<!--page heading-->
<header class="pt-5 pb-3">
  <div class="container">
    <div class="text-center">
      <h1 class="section-heading text-uppercase underline">
        Adopter Profile
      </h1>
    </div>
  </div> <!--container-->
</header>

<section class="pb-5" id="account_select">
  <div class="container mb-md-5 mt-md-5">

    <!-- pregress bar-->
    <div>
      <div class="stepper-wrapper mb-5">
          <div class="stepper-item completed">
              <div class="step-counter">1</div>
              <div class="step-name">Select account type</div>
          </div>
          <div class="stepper-item completed">
              <div class="step-counter">2</div>
              <div class="step-name">Create Account</div>
          </div>
          <div class="stepper-item active">
              <div class="step-counter">3</div>
              <div class="step-name">Complete adopter profile</div>
          </div>
      </div> <!--wrapper-->
    </div>

    <h4 class="text-center mb-4">Please complete your adopter profile</h4>
    
    <!--rendering _form.html.erb-->
    <div class="col-md-8 mx-auto">
        <%= render "form", profile: @adopter_profile %>
    </div>

  </div> <!--container-->
</section>
