<% if @dog.nil?%>

  <% @dogs.each do |dog| %>
    <%= link_to dog.name, dog_path(dog) %>
    
    <div class='card'>
      <% dog.adopter_applications.each do |app|%>
      <p>Application Status: <%= app.status %></p>
      <p>Applicant Profile: <%= link_to 'Adopter Profile', profile_review_path(app.adopter_account.adopter_profile.id) %>
      <%= link_to 'Edit Application', edit_adopter_application_path(app.id) %>
      <%= button_to 'Adoption', create_adoption_path(dog_id: dog.id, 
                                                     adopter_account_id: app.adopter_account.id) %>
      <% end %>
    </div>

  <% end %>

<% else %>

  <%= link_to @dog.name, dog_path(@dog) %>
    
    <div class='card'>
      <% @dog.adopter_applications.each do |app|%>
      <p>Application Status: <%= app.status%></p>
      <p>Applicant Profile: <%= link_to 'Adopter Profile', profile_review_path(app.adopter_account.adopter_profile.id) %>
      <%= link_to 'Edit Application', edit_adopter_application_path(app.id) %>
      <%= button_to 'Adoption', create_adoption_path(dog_id: @dog.id, 
                                                     adopter_account_id: app.adopter_account.id) %>
      <% end %>
    </div>

<% end %>
