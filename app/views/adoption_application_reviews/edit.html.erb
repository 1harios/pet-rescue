<section class="pt-5 pb-5" id="about_us">
  <div class="container mb-md-5 mt-md-5">

    <!--page heading-->
    <div class="mb-5 text-center">
      <h4>Edit application</h4>
    </div>

    <!--main section-->
    <div class="row">
      <div class="card p-4 col-md-10 shadow mx-auto">
        <h4>
          Name: <%= @application.adopter_account.user.first_name %>
          <%= @application.adopter_account.user.last_name %>
        </h4>
        <%= link_to 'Adopter Profile', 
            profile_review_path(@application.adopter_account.adopter_profile.id) %>

        <%= form_with model: @application, :url => adopter_application_path do |form| %>

          <div class="form-group">
            <%= form.label :status %>
            <p class='fw-bold'><%#= @application.status %></p>
            <%= form.select(:status, AdopterApplication.app_review_statuses) %>
          </div>
          
          <div class="form-group">  
            <%= form.label :notes %>
            <%= form.text_area :notes,
                    class: 'form-control' %>
          </div>

          <%= form.submit 'Save', class: 'btn btn-outline-dark mb-3'%>
        <% end %>
      </div> <!--card-->
    </div> <!--row-->
    
  </div> <!--container-->
</section>
