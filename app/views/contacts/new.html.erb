<section class="pt-5 pb-5" id="registration_new">
  <div class="container mb-md-5 mt-md-5 ">

    <!--page heading-->
    <div class="container mb-md-5 mt-md-5">
        <div class="text-center mb-5">
          <h2 class="section-heading text-uppercase underline">
            Contact Us
          </h2>
        </div>
    </div> <!--container-->

    <div class='mb-3 text-center bigger'>
      Please refer to the <%= link_to 'FAQ', faq_path %> and send us a message 
      if you still have questions/comments.
    </div>

    <div class="row">
      <div class="col-md-6 mx-auto card p-5">
        <%= form_with url: '/contacts', method: :get do | f | %>

          <div class="row mb-2">
            <div class="mb-3 form-group">
              <%= f.label :name, 'Name*', class: 'bigger' %>
              <%= f.text_field :name, autofocus: true, 
                                      class: 'form-control', 
                                      required: true %>
            </div>

            <div class="mb-3 form-group">
                <%= f.label :email, 'Email*', class: 'bigger' %>
                <%= f.email_field :email, class: 'form-control', 
                                          required: true %>
            </div>

            <div class="mb-3 form-group" data-controller='counter'>
              <%= f.label :message, 'Message*', class: 'bigger' %>
              <%= f.text_area :message, class: 'form-control', 
                                        data: { action: "input->counter#countLarge", 
                                                counter_target: 'input' },
                                        placeholder: 'Enter your message...',
                                        required: true %>
                <div data-counter-target='output' class='small'></div>
            </div>
            
            <div class="form-group">
              <%= f.submit 'Submit', class: 'btn btn-outline-dark bigger' %>
            </div>
          </div> <!--row-->

        <% end %>
      </div>
    </div>
  </div>
</section>