<h2>Adopter Sign up</h2>

<% if params[:account_type] == 'staff' %>
  <% resource.build_staff_account if resource.staff_account.nil? %>
<% else %>
  <% resource.build_adopter_account if resource.adopter_account.nil? %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <% if params[:account_type] == 'staff' %>
      <%= f.fields_for :staff_account do |fields| %>
        <%= fields.hidden_field :user_id %>
      <% end %>
    <% else %>
     <%= f.fields_for :adopter_account do |fields| %>
        <%= fields.hidden_field :user_id %>
      <% end %>
    <% end %>
  
  <div class="field">
    <%= f.label :email, 'Email*' %><br />
    <%= f.email_field :email, 
                      autofocus: true,
                      required: true,
                      autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :first_name, 'First Name*' %><br />
    <%= f.text_field :first_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, 'Last Name*' %><br />
    <%= f.text_field :last_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :password, 'Password*' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,
                         required: true,
                         autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Password Confirmation*' %><br />
    <%= f.password_field :password_confirmation,
                         required: true,
                         autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", data: { turbo: false } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
