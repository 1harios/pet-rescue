<%# Add custom message if error is the tos_agreement checkbox %>
<% if resource.errors.any? %>
  <% if resource.errors[:tos_agreement] %>
    <% resource.custom_messages(:tos_agreement).each do |error| %>
      <div class="alert alert-danger mt-1" role="alert"><%= error.message %></div>
    <% end %>
  <% else %>
  <div id="error_explanation">
    <%# <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    <%# /h2> %>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <div class="alert alert-danger mt-1" role="alert">
          <%= message %>
        </div>
      <% end %>
    </ul>
  </div>
<% end %>
<% end %>
